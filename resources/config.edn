{
 ;; ftx config
 :ftx-api-key "<YOUR API KEY>"
 :ftx-secret-key "<YOUR SECRET KEY>"
 ;; use these two connections if not in the US
 :ftx-ws "wss://ftx.com/ws/"
 :ftx-api "https://ftx.com/api"
 ;; use these two connections if in the US - spot only, no futures :(
 :ftx-ws-us "wss://ftx.us/ws/"
 :ftx-api-us "https://ftx.us/api"

 :ws-timeout-ms 10000 ;; timeout to wait before attempting to reconnect

 ;; model params
 :est-bar-mins 30.0
 :bar-count 10 ;; minimum bars to see
 :vol-span 36
 :window-start 2.0
 :num-windows 8

 ;; scaling
 :scale-span 10000
 :scale-target 10.0
 :scale-cap 20.0
 :starting-scales [10.6 7.5 5.3 3.75 2.65 1.87]
 :weights [0.2125 0.075 0.2025 0.215 0.08 0.215]
 :fdm 1.15

 ;; volatility targeting
 :volatility-target 0.375

 ;; trade params
 :markets #{:BTC :BCH :SOL :ETH :SUSHI :DOGE :LINK :UNI :LTC :GRT :TRX :YFI}
 :num-markets 20 ;; if above is populated, this will be ignored
 :position-inertia-percent 0.1 ;; minimum position change
 :test-market-notional 10000.0
 }
